
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30px">
    <TextView
        android:text="Location"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:id="@+id/textView_location" />
    <TextView
        android:text="Wed, 15 Nov 3065"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_date" />
    <TextView
        android:text="It does not fucking snow"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_status"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="clip_vertical" />
    <TextView
        android:text="But it is cold as hell"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_additional" />
    <GridLayout
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_marginTop="25dp"
        android:id="@+id/gridLayout1">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:id="@+id/imageView_status_icon"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:layout_column="0"
            android:layout_columnWeight="1" />
        <TextView
            android:text="10 C"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_temperature"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_column="1"/>
    </GridLayout>
    <Button
        android:text="@string/button_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_refreshCurrent"
        android:layout_gravity="end|bottom" />
    <Button
        android:text="@string/button_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_scheduleJob"
        android:layout_gravity="end|bottom" />
</LinearLayout>